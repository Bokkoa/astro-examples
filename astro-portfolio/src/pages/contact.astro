---
import Menu from '../Components/Menu.astro'
import TitlePage from '../Components/TitlePage.astro'
import Button from '../Components/Button.astro'

const styleInput = "border border-purple-300 px-4 py-2 rounded-md hover:border-pink-400"
const styleTextarea = "border border-purple-300 px-4 py-2 rounded-md hover:border-pink-400 md:col-span-3"
---

<Menu />

<section class="pt-20 pb-36 px-8 bg-gray-200">
  <div class="max-w-6xl mx-auto">
    <TitlePage title="Contact" subtitle="Get in touch with me!" />
  </div>
  <div class="mt-16 relative max-w-4xl mx-auto">
    <div class="relative z-20 bg-white rounded-md shadow-lg p-12">
      <form action="">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-x-8 gap-y-6 gap-10">
          <input type="text" placeholder="name" class={styleInput}>
          <input type="email" placeholder="email" class={styleInput}>
          <input type="text" placeholder="subject" class={styleInput}>
          <textarea rows="5" placeholder="message" class={styleTextarea}></textarea>
        </div>
        <Button title="Send message" />
      </form>
    </div>
  </div>
</section>