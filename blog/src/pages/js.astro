---
import Layout from "@layouts/Layout.astro";
import Title from "@components/Title.astro";
import BlogPreview from "@components/BlogPreview.astro";

let allPosts = await Astro.glob("./posts/javascript/*.md");

allPosts = allPosts.sort((date1, date2) =>
  new Date(date1.frontmatter.date).valueOf() -
  new Date(date2.frontmatter.date).valueOf()
);
---

<Layout title="Welcome to my blog.">
  <Title
    title="JS"
    title2="Blog"
    subtitle="awsome blog with astro"
  />


  {allPosts.map((p) => (<BlogPreview post={p} />)) }
</Layout>
